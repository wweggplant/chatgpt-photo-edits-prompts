---
import { Image } from 'astro:assets';
import { SITE_TITLE } from '@/consts';
const year = new Date().getFullYear();
---

  <!-- Footer -->
  <footer class="bg-gray-800 text-white mt-16">
    <div class="container mx-auto px-4 py-8 text-center">
      <p>&copy; {year} {SITE_TITLE}. All Rights Reserved.</p>
      <div class="mt-6 mb-4">
        <div class="flex flex-wrap justify-center items-center gap-4">
          <a href="https://twelve.tools" target="_blank" class="hover:opacity-80 transition-opacity">
            <Image src="https://twelve.tools/badge0-white.svg" alt="Featured on Twelve Tools" width="180" height="48" class="h-12" />
          </a>
          <a href="https://www.showmebest.ai" target="_blank" class="hover:opacity-80 transition-opacity">
            <Image src="https://www.showmebest.ai/badge/feature-badge-white.webp" alt="Featured on ShowMeBestAI" width="200" height="55" class="h-12" />
          </a>
          <a href="https://fazier.com" target="_blank" class="hover:opacity-80 transition-opacity">
            <Image src="https://fazier.com/api/v1//public/badges/launch_badges.svg?badge_type=launched&theme=light" width="120" height="48" alt="Fazier badge" class="h-12" />
          </a>
          <a href="https://magicbox.tools" target="_blank" class="hover:opacity-80 transition-opacity">
            <Image src="https://magicbox.tools/badge.svg" alt="Featured on MagicBox.tools" width="200" height="54" />
          </a>
        </div>
      </div>
      <div class="mt-4">
        <a href="#top" class="text-gray-400 hover:text-white mx-2">Back to Top</a>
        <span class="text-gray-500">|</span>
        <a href="/privacy" class="text-gray-400 hover:text-white mx-2">Privacy Policy</a>
        <span class="text-gray-500">|</span>
        <a href="/terms" class="text-gray-400 hover:text-white mx-2">Terms of Service</a>
        <span class="text-gray-500">|</span>
      </div>
    </div>
  </footer>